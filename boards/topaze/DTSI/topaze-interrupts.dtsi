// ============================================================
// GPIO INTERRUPTS PINS
// ============================================================
// Virtual device that map physical pins to names
&pinctrl {
    int {
		compatible = "gpio-keys";
        
        intimu: intimu {
            gpios =     <&gpio0 10 GPIO_ACTIVE_HIGH>;
            label =     "IMU (9 axis sensor) interrupt pin";
        };

        intaccel1: intaccel1 {
            gpios =     <&gpio0 23 GPIO_ACTIVE_LOW>;
            label =     "Accelerometer 1 interrupt pin";
        };

        intaccel2: intaccel2 {
            // gpios =     <&gpio0 20 GPIO_ACTIVE_LOW>; // VALID FOR TOPAZE BOARD
            gpios =     <&gpio0 25 GPIO_ACTIVE_LOW>; // VALID FOR DK 
            label =     "Accelerometer 2 interrupt pin";
        };

        intgps: intgps {
            gpios =     <&gpio1 13 GPIO_ACTIVE_LOW>;
            label =     "GPS interrupt pin";
        };
	};
};

/{
    aliases {
        intimu = &intimu;
        intgps = &intgps;
        intaccel1 = &intaccel1;
        intaccel2 = &intaccel2;
    };
};


